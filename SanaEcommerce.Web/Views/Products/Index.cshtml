@model IEnumerable<SanaEcommerce.Core.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary btn-large">Create New</a>
    @if ((bool)Session["database"])
    {
        <button id="btnInmemory" class="btn btn-large btn-success pull-right" type="button" onclick="ChangeStorage('memory');">Get data from Memory</button>
    }
    else
    {
        <button id="btnDatabase" class="btn btn-large btn-success pull-right" type="button" onclick="ChangeStorage('database');">Get data from Database</button>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>    
        </tr>
}
    </tbody>
</table>

<script type="text/javascript">
    function ChangeStorage(storage) {
        window.location.href = "/Products/index?storageMode=" + storage;
    }
</script>